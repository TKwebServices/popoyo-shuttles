<nav class="navbar">
	<div class="navbar-container">
		<a href="/" class="navbar-logo">Popoyo Shuttles</a>
		<ul class="navbar-menu">
			<li><a href="#rates">Rates</a></li>
			<li><a href="#about">About</a></li>
			<li><a href="#faq">FAQ</a></li>
			<li><a href="#contact">Contact</a></li>
		</ul>
