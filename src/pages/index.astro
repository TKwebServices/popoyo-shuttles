---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import RateCard from '../components/RateCard.astro';

const destinations = [
	{ 
		destination: 'Managua Airport (MGA)', 
		price: '$90',
		duration: '~2.5 hours',
		distance: '120 km',
		icon: 'airplane',
		description: 'Direct airport transfers with comfortable vehicles'
	},
	{ 
		destination: 'Costa Esmeralda (ECI)', 
		price: '$50',
		duration: '~1.5 hours',
		distance: '70 km',
		icon: 'beach',
		description: 'Direct airport transfers with comfortable vehicles'
	},
	{ 
		destination: 'San Juan del Sur', 
		price: '$45',
		duration: '~1 hour',
		distance: '50 km',
		icon: 'beach',
		description: 'Popular surf town with stunning ocean views'
	},
	{ 
		destination: 'Rivas / San Jorge', 
		price: '$35',
		duration: '~45 min',
		distance: '35 km',
		icon: 'location',
		description: 'Quick and convenient local transfers'
	},
	{ 
		destination: 'Granada', 
		price: '$55',
		duration: '~2 hours',
		distance: '90 km',
		icon: 'city',
		description: 'Historic colonial city with rich culture'
	},
	{ 
		destination: 'Everywhere Else', 
		price: 'Varies',
		description: 'Need a ride to another destination? Contact us for a custom quote based on your specific location and needs.'
	},
];
---

<Layout>
	<Hero />
	
	<section id="rates" class="rates-section">
		<div class="container">
			<h2 class="section-title">Our Rates</h2>
			<p class="section-subtitle">Transparent pricing for all destinations</p>
			<div class="rates-grid">
				{destinations.map((rate) => (
					<RateCard 
						destination={rate.destination}
						price={rate.price}
						duration={rate.duration}
						distance={rate.distance}
						icon={rate.icon}
						description={rate.description}
					/>
				))}
			</div>
		</div>
	</section>
	
	<section id="about" class="about-section">
		<div class="container">
			<div class="about-content">
				<div class="about-text">
					<h2 class="section-title">Why Choose Popoyo Shuttles?</h2>
					<p class="about-description">
						We're your trusted local transportation partner in Nicaragua. With years of experience serving travelers 
						and locals alike, we understand the importance of reliable, comfortable, and safe transportation.
					</p>
					<p class="about-description">
						Our professional drivers know the roads like the back of their hand, ensuring you arrive safely and on time. 
						Whether you're heading to the airport, exploring Nicaragua's beautiful destinations, or need a ride anywhere 
						in the region, we've got you covered.
					</p>
					<div class="about-features">
						<div class="about-feature">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="feature-icon">
								<path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
							</svg>
							<div>
								<h3>Safe & Reliable</h3>
								<p>Well-maintained vehicles and experienced drivers</p>
							</div>
						</div>
						<div class="about-feature">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="feature-icon">
								<path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
								<path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
							</svg>
							<div>
								<h3>Comfortable Rides</h3>
								<p>Clean, spacious vehicles with air conditioning</p>
							</div>
						</div>
						<div class="about-feature">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="feature-icon">
								<path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
							</svg>
							<div>
								<h3>Easy Booking</h3>
								<p>Simple WhatsApp booking, pay cash on arrival</p>
							</div>
						</div>
					</div>
				</div>
				<div class="about-image">
					<img src="/popoyopic.webp" alt="Popoyo Shuttles vehicle" class="about-image-img" />
				</div>
			</div>
		</div>
	</section>
	
	<section id="faq" class="faq-section">
		<div class="container">
			<h2 class="section-title">Frequently Asked Questions</h2>
			<div class="faq-list">
				<div class="faq-item">
					<h3 class="faq-question">How do I book a ride?</h3>
					<p class="faq-answer">Simply click the "Book Now" button on any destination card or use the WhatsApp button in the hero section. We'll confirm your booking via WhatsApp.</p>
				</div>
				<div class="faq-item">
					<h3 class="faq-question">What payment methods do you accept?</h3>
					<p class="faq-answer">We accept cash payments upon arrival. This makes it easy and convenient for you.</p>
				</div>
				<div class="faq-item">
					<h3 class="faq-question">Are your drivers verified?</h3>
					<p class="faq-answer">Yes, all our drivers are verified local professionals with extensive knowledge of the area.</p>
				</div>
				<div class="faq-item">
					<h3 class="faq-question">Is service available 24/7?</h3>
					<p class="faq-answer">Yes, we provide round-the-clock service to meet your travel needs at any time.</p>
				</div>
			</div>
		</div>
	</section>
	
	<section id="local-guide" class="promo-section">
		<div class="container">
			<div class="promo-content">
				<div class="promo-text">
					<h2 class="promo-title">New to Popoyo?</h2>
					<p>Discover what's happening in the Popoyo community. See a list of daily Events, Food Specials, Yoga, and Parties in one curated directory that's updated daily.</p>
				</div>
				<a href="https://popoyolist.com" target="_blank" rel="noopener noreferrer" class="btn-secondary">
					Explore Popoyo List â†’
				</a>
			</div>
		</div>
	</section>
	
	<section id="contact" class="contact-section">
		<div class="container">
			<h2 class="section-title">Get in Touch</h2>
			<p class="section-subtitle">Have questions? We're here to help!</p>
			<div class="contact-content">
				<p>Contact us via WhatsApp for immediate assistance:</p>
				<a href="https://wa.me/19022137109?text=Hi!%20I'd%20like%20to%20book%20a%20shuttle%20service." target="_blank" rel="noopener noreferrer" class="contact-whatsapp">
					+1 (902) 213-7109
				</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-lg);
	}
	
	.section-title {
		font-size: 2.25rem;
		font-weight: 800;
		text-align: center;
		margin-bottom: var(--spacing-sm);
		color: var(--color-text);
		letter-spacing: -0.03em;
		position: relative;
	}
	
	.section-title::after {
		content: '';
		display: block;
		width: 60px;
		height: 3px;
		background: linear-gradient(90deg, var(--color-primary), var(--color-primary-light));
		margin: var(--spacing-xs) auto 0;
		border-radius: 2px;
	}
	
	.section-subtitle {
		text-align: center;
		color: var(--color-text-light);
		margin-bottom: var(--spacing-xl);
		font-size: 1rem;
		font-weight: 400;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}
	
	.rates-section {
		padding: var(--spacing-2xl) 0;
		background: linear-gradient(180deg, var(--color-bg) 0%, var(--color-bg-light) 100%);
		position: relative;
	}
	
	.rates-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: var(--spacing-md);
		margin-top: var(--spacing-lg);
	}
	
	.about-section {
		padding: var(--spacing-2xl) 0;
		background-color: var(--color-bg);
	}
	
	.about-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-2xl);
		align-items: center;
	}
	
	.about-text {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-md);
	}
	
	.about-description {
		font-size: 1.05rem;
		color: var(--color-text-light);
		line-height: 1.8;
		margin: 0;
	}
	
	.about-features {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-md);
		margin-top: var(--spacing-md);
	}
	
	.about-feature {
		display: flex;
		gap: var(--spacing-md);
		align-items: flex-start;
		padding: var(--spacing-md);
		background: var(--color-bg-light);
		border-radius: var(--border-radius);
		border-left: 3px solid var(--color-primary);
	}
	
	.feature-icon {
		width: 28px;
		height: 28px;
		color: var(--color-primary);
		flex-shrink: 0;
		margin-top: 2px;
	}
	
	.about-feature h3 {
		font-size: 1.1rem;
		font-weight: 700;
		margin: 0 0 var(--spacing-xs) 0;
		color: var(--color-text);
	}
	
	.about-feature p {
		font-size: 0.95rem;
		color: var(--color-text-light);
		margin: 0;
		line-height: 1.6;
	}
	
	.about-image {
		position: relative;
	}
	
	.about-image-img {
		width: 100%;
		height: auto;
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow-lg);
		object-fit: cover;
		aspect-ratio: 4 / 3;
	}
	
	.faq-section {
		padding: var(--spacing-2xl) 0;
		background-color: var(--color-bg-light);
	}
	
	.faq-list {
		max-width: 800px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		gap: var(--spacing-md);
	}
	
	.faq-item {
		background: var(--color-bg);
		padding: var(--spacing-md);
		border-radius: var(--border-radius-lg);
		border: 2px solid var(--color-border);
		border-left: 4px solid var(--color-primary);
		box-shadow: var(--shadow-sm);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}
	
	.faq-item:hover {
		box-shadow: var(--shadow-md);
		transform: translateX(4px);
		border-left-color: var(--color-primary-light);
	}
	
	.faq-question {
		font-size: 1.1rem;
		font-weight: 700;
		margin-bottom: var(--spacing-xs);
		color: var(--color-text);
		letter-spacing: -0.01em;
	}
	
	.faq-answer {
		color: var(--color-text-light);
		line-height: 1.6;
		margin: 0;
		font-size: 0.95rem;
	}
	
	.promo-section {
		padding: var(--spacing-xl) 0;
		background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, var(--color-bg-light) 100%);
		margin-top: var(--spacing-2xl);
		border-top: 1px solid var(--color-border);
		border-bottom: 1px solid var(--color-border);
	}
	
	.promo-content {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: var(--spacing-lg);
		flex-wrap: wrap;
	}
	
	.promo-title {
		font-size: 1.8rem;
		font-weight: 800;
		margin-bottom: var(--spacing-xs);
		color: var(--color-text);
		letter-spacing: -0.02em;
	}
	
	.promo-text p {
		color: var(--color-text-light);
		font-size: 1.05rem;
		max-width: 600px;
		margin: 0;
		line-height: 1.7;
	}
	
	.btn-secondary {
		background: var(--color-primary);
		color: white;
		padding: var(--spacing-sm) var(--spacing-lg);
		border-radius: var(--border-radius-lg);
		font-weight: 700;
		text-decoration: none;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		white-space: nowrap;
		font-size: 1rem;
		box-shadow: var(--shadow-md);
	}
	
	.btn-secondary:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-lg);
		background: var(--color-primary-dark);
		color: white;
	}
	
	.contact-section {
		padding: var(--spacing-2xl) 0;
		background: linear-gradient(135deg, var(--color-bg-light) 0%, #f0f9ff 100%);
		text-align: center;
		position: relative;
	}
	
	.contact-content {
		max-width: 600px;
		margin: 0 auto;
		background: var(--color-bg);
		padding: var(--spacing-xl);
		border-radius: var(--border-radius-lg);
		box-shadow: var(--shadow-lg);
	}
	
	.contact-content p {
		font-size: 1rem;
		color: var(--color-text-light);
		margin-bottom: var(--spacing-md);
		font-weight: 400;
	}
	
	.contact-whatsapp {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: var(--spacing-sm);
		background: linear-gradient(135deg, var(--color-success), var(--color-success-dark));
		color: #ffffff;
		padding: var(--spacing-sm) var(--spacing-lg);
		border-radius: var(--border-radius-lg);
		font-size: 1.1rem;
		font-weight: 700;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: var(--shadow-lg);
		letter-spacing: -0.01em;
	}
	
	.contact-whatsapp:hover {
		background: linear-gradient(135deg, var(--color-success-dark), var(--color-success));
		transform: translateY(-4px) scale(1.02);
		box-shadow: var(--shadow-xl);
		color: #ffffff;
	}
	
	@media (max-width: 768px) {
		.container {
			padding: 0 var(--spacing-md);
		}
		
		.section-title {
			font-size: 1.75rem;
		}
		
		.section-subtitle {
			font-size: 0.95rem;
		}
		
		.rates-section,
		.about-section,
		.faq-section,
		.promo-section,
		.contact-section {
			padding: var(--spacing-xl) 0;
		}
		
		.promo-content {
			flex-direction: column;
			text-align: center;
		}
		
		.promo-title {
			font-size: 1.5rem;
		}
		
		.promo-text p {
			font-size: 1rem;
		}
		
		.btn-secondary {
			width: 100%;
			max-width: 300px;
		}
		
		.about-content {
			grid-template-columns: 1fr;
			gap: var(--spacing-lg);
		}
		
		.about-image {
			order: -1;
		}
		
		.about-feature {
			padding: var(--spacing-sm);
		}
		
		.rates-grid {
			grid-template-columns: 1fr;
			gap: var(--spacing-sm);
			margin-top: var(--spacing-md);
		}
		
		.faq-item {
			padding: var(--spacing-sm);
		}
		
		.faq-question {
			font-size: 1rem;
		}
		
		.faq-answer {
			font-size: 0.9rem;
		}
		
		.contact-content {
			padding: var(--spacing-lg) var(--spacing-md);
		}
		
		.contact-content p {
			font-size: 0.95rem;
		}
		
		.contact-whatsapp {
			font-size: 1rem;
			padding: var(--spacing-xs) var(--spacing-md);
		}
	}
</style>
